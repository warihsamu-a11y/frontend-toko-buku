{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "toko-buku-sam",
  "version": "1.0.0",
  "description": "Frontend e-commerce application for Toko Buku Sam (Sam Bookstore)",
  "main": "index.html",
  "scripts": {
    "start": "http-server . -p 8000 -o",
    "serve": "http-server . -p 8000",
    "dev": "http-server . -p 3000 -c-1",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "bookstore",
    "e-commerce",
    "shop",
    "books",
    "frontend"
  ],
  "author": "Toko Buku Sam",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/warihsamu-a11y/frontend-toko-buku.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "features": [
    "Product Catalog",
    "Advanced Search & Filtering",
    "Shopping Cart with localStorage",
    "Product Details & Reviews",
    "Responsive Design",
    "No External Dependencies (Vanilla JS)"
  ]
}
